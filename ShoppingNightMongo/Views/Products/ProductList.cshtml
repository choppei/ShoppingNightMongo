@model List<ShoppingNightMongo.Dtos.ProductDtos.ResultProductDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ürün adı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stok sayısı</th>
            <th>Ürün kategori</th>
            <th>Sil</th>
            <th>güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.StockCount</td>
                <td>@item.CategoryId</td>
                <td><a href="/Products/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Products/UpdateProducts/@item.ProductId" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </table>
    <a href="/Products/CreateProducts/" class=" btn btn-primary">Yeni kategori girişi</a>
</div>
